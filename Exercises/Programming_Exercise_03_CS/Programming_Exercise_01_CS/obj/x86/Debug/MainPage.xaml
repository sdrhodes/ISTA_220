<Page
    x:Class="Programming_Exercise_01_CS.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Programming_Exercise_01_CS"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:ConnectionId='1' x:Name="butCircum" Content="Calculate" HorizontalAlignment="Left" Margin="925,65,0,0" 
                VerticalAlignment="Top" Height="90" Width="210" FontSize="30"                    />
        <TextBlock x:ConnectionId='2' x:Name="textBlockCircum" HorizontalAlignment="Left" Margin="165,60,0,0" 
                   Text="Enter the radius of a circle to find its circumference" 
                   TextWrapping="Wrap" VerticalAlignment="Top" Height="95" Width="475" FontSize="36" 
                                                            />
        <TextBox x:ConnectionId='3' x:Name="textBoxCircum" HorizontalAlignment="Left" Margin="720,55,0,0" 
                 VerticalAlignment="Top" Height="100" Width="160"/>
        <TextBlock x:ConnectionId='4' x:Name="resultCircum" HorizontalAlignment="Left" Margin="1165,65,0,0" 
                   TextWrapping="Wrap" VerticalAlignment="Top" Height="90" Width="150" FontSize="30"/>


        <TextBlock x:ConnectionId='5' x:Name="resultCircArea" HorizontalAlignment="Left" Margin="1177,207,0,0" 
            TextWrapping="Wrap" VerticalAlignment="Top" Height="90" Width="150" FontSize="30"/>
        <Button x:ConnectionId='6' x:Name="butAreaCirc" Content="Calculate" HorizontalAlignment="Left" Margin="925,210,0,0" 
            VerticalAlignment="Top" Height="90" Width="210" FontSize="30"                      />
        <TextBox x:ConnectionId='7' x:Name="textBoxAreaCirc" HorizontalAlignment="Left" Margin="723,204,0,0" 
            VerticalAlignment="Top" Height="100" Width="160"/>
        <TextBlock x:ConnectionId='8' x:Name="textBlockAreaCirc" HorizontalAlignment="Left" Margin="163,206,0,0" 
            Text="Enter the radius of a circle to find its area" 
            TextWrapping="Wrap" VerticalAlignment="Top" Height="95" Width="475" FontSize="36" 
                                                     />
        <TextBlock x:ConnectionId='9' x:Name="resultVolHemis" HorizontalAlignment="Left" Margin="1180,335,0,0" 
            TextWrapping="Wrap" VerticalAlignment="Top" Height="90" Width="150" FontSize="30"/>
        <Button x:ConnectionId='10' x:Name="butVolHemis" Content="Calculate" HorizontalAlignment="Left" Margin="930,345,0,0" 
            VerticalAlignment="Top" Height="90" Width="210" FontSize="30"                      />
        <TextBox x:ConnectionId='11' x:Name="textBoxVolHemis" HorizontalAlignment="Left" Margin="725,335,0,0" 
            VerticalAlignment="Top" Height="100" Width="160"/>
        <TextBlock x:ConnectionId='12' x:Name="textBlockVolHemis" HorizontalAlignment="Left" Margin="170,340,0,0" 
            Text="Enter the radius of a hemisphere to find its volume" 
            TextWrapping="Wrap" VerticalAlignment="Top" Height="95" Width="475" FontSize="36" 
                                                     />
        
        <TextBlock x:ConnectionId='13' x:Name="textBlockTri" HorizontalAlignment="Left" Margin="125,475,0,0" 
            Text="Enter the sides, a, b, c, of a triangle to find its area" 
            TextWrapping="Wrap" VerticalAlignment="Top" Height="95" Width="475" FontSize="36" 
                                                     />
        <TextBox x:ConnectionId='14' x:Name="textBoxTriA" HorizontalAlignment="Left" Margin="620,475,0,0" 
            VerticalAlignment="Top" Height="100" Width="75"/>
        <TextBox x:ConnectionId='15' x:Name="textBoxTriB" HorizontalAlignment="Left" Margin="720,475,0,0" 
            VerticalAlignment="Top" Height="100" Width="75"/>
        <TextBox x:ConnectionId='16' x:Name="textBoxTriC" HorizontalAlignment="Left" Margin="815,475,0,0" 
            VerticalAlignment="Top" Height="100" Width="75"/>
        <Button x:ConnectionId='17' x:Name="butAreaTri" Content="Calculate" HorizontalAlignment="Left" Margin="930,480,0,0" 
            VerticalAlignment="Top" Height="90" Width="210" FontSize="30"                 />
        <TextBlock x:ConnectionId='18' x:Name="resultTri" HorizontalAlignment="Left" Margin="1180,475,0,0" 
            TextWrapping="Wrap" VerticalAlignment="Top" Height="90" Width="150" FontSize="30"/>
        <TextBlock x:ConnectionId='19' x:Name="textBlockQuad" HorizontalAlignment="Left" Margin="125,630,0,0" 
            Text="Enter coefficients from highest to lowest power" 
            TextWrapping="Wrap" VerticalAlignment="Top" Height="95" Width="475" FontSize="36" 
                                                     />
        <TextBox x:ConnectionId='20' x:Name="textBoxQuadA" HorizontalAlignment="Left" Margin="620,630,0,0" 
            VerticalAlignment="Top" Height="100" Width="75"/>
        <TextBox x:ConnectionId='21' x:Name="textBoxQuadB" HorizontalAlignment="Left" Margin="725,630,0,0" 
            VerticalAlignment="Top" Height="100" Width="75"/>
        <TextBox x:ConnectionId='22' x:Name="textBoxQuadC" HorizontalAlignment="Left" Margin="820,630,0,0" 
            VerticalAlignment="Top" Height="100" Width="75"/>
        <Button x:ConnectionId='23' x:Name="butQuad" Content="Calculate" HorizontalAlignment="Left" Margin="930,635,0,0" 
            VerticalAlignment="Top" Height="90" Width="210" FontSize="30"                  />
        <TextBlock x:ConnectionId='24' x:Name="resultQuadNeg" HorizontalAlignment="Left" Margin="1160,635,0,0" 
            TextWrapping="Wrap" VerticalAlignment="Top" Height="90" Width="150" FontSize="30"/>
        <TextBlock x:ConnectionId='25' x:Name="resultQuadPos" HorizontalAlignment="Left" Margin="1335,635,0,0" 
            TextWrapping="Wrap" VerticalAlignment="Top" Height="90" Width="150" FontSize="30"/>

    </Grid>
</Page>

